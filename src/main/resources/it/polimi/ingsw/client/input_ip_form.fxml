<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/16"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="it.polimi.ingsw.client.ConnectFormController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="300.0" prefWidth="400">

        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="500" prefWidth="300">
        </ColumnConstraints>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="20.0"/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>

    </rowConstraints>


    <TextField fx:id="ip_input" promptText="ip" GridPane.columnIndex="0" text="127.0.0.1">
        <GridPane.margin>
            <Insets bottom="20" top="20"/>
        </GridPane.margin>
    </TextField>
    <TextField fx:id="port_input" promptText="port" GridPane.columnIndex="0" GridPane.rowIndex="4" text="1337">
        <GridPane.margin>
            <Insets bottom="20"/>
        </GridPane.margin>

    </TextField>
    <Button fx:id="connectButton" mnemonicParsing="false" text="Connect" GridPane.columnIndex="0" GridPane.rowIndex="6"
            onAction="#connectButton"/>
</GridPane>
